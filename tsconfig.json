{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": [
            "ES2022"
        ],
        "noEmitOnError": true,
        "strictNullChecks": true,
        "allowJs": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "typeRoots": [
            "./typings",
            "./node_modules/@types/"
        ],
    }
}